CONV := ./makepng
PLAIN := icon-gen-512x512.png icon-gen-144x144.png \
			icon-gen-96x96.png icon-gen-72x72.png \
			icon-gen-48x48.png icon-gen-36x36.png
LOVETRUE := lovetrue-gen-512x512.png lovetrue-gen-144x144.png \
			lovetrue-gen-96x96.png lovetrue-gen-72x72.png \
			lovetrue-gen-48x48.png lovetrue-gen-36x36.png
