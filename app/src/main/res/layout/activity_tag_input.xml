<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
<LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="uk.co.spookypeanut.lovetag.TagInputActivity"
                android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/tag_title"
                android:singleLine="true"
                android:textAlignment="gravity"
                android:layout_gravity="right"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/tag_artist"
                android:paddingLeft="4dp"
                android:singleLine="true"
                android:textAlignment="gravity"
                android:paddingRight="4dp"
                android:layout_gravity="right"
                android:textStyle="italic"/>

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tag_love_button"
            android:src="@drawable/lovefalse"
            android:background="#00000000"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:contentDescription="@string/ti_love_button_desc"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tagInputBox"
        android:layout_weight="0"
        android:inputType="text"
        android:imeActionLabel="Add"
        android:lines="1"
        android:singleLine="true"
        android:hint="@string/tag_hint"/>

    <ProgressBar
        android:id="@+id/ti_initialProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/ti_connectionwarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:gravity="center_horizontal"
        android:textSize="18sp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="10">

        <Space
            android:layout_width="60dp"
            android:layout_height="match_parent"/>

        <ListView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/tagList"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:layout_weight="10"/>

        <Space
            android:layout_width="60dp"
            android:layout_height="match_parent"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/buttonBarStyle"
        >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/tag_input_ok_button"
            android:id="@+id/tag_ok"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:enabled="false"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/tag_input_cancel_button"
            android:id="@+id/tag_cancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
        <FrameLayout
        android:id="@+id/progressBarHolder"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        android:alpha="0.4"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            style="?android:attr/progressBarStyleLargeInverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_gravity="center" />
        </FrameLayout>
</FrameLayout>

